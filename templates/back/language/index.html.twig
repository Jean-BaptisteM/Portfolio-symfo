{% extends 'back/base.html.twig' %}

{% block title %}
Langage
{% endblock %}

{% block body %}
	<h1 class="back-title">Liste des Langages</h1>
	<div class="text-end">
	<a href="{{ path('app_back_language_new') }}"class="btn m-2 col-3">Ajouter une Entrée</a>
	</div>
<div class="row d-flex justify-content-around">
{% for language in languages %}
		<div class="card border-secondary my-3 mx-1 mx-md-3 col-lg-5 col-xl-3 col-xxl-2 p-0">
		<a href="{{ path('app_back_language_show', {'id': language.id}) }}" class="text-decoration-none">
			<div class="card-header text-center">{{ language.name }}</div></a>
		</div>
{% else %}
		<div class="card border-secondary my-3 mx-1 mx-md-3 col-lg-5 col-xl-3 col-xxl-2 p-0">
			<div class="card-header text-center">Aucune donnée trouvée</div>
		</div>
		{% endfor %}
	
</div>       
{% endblock %}
